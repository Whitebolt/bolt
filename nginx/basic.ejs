server {
    listen 80;
    server_name <%=config.domains.join(' ');%>;

    location / {
        root /var/www;
        try_files <%=config.root.join('public/$uri ')+'public/$uri @bolt';%>;
    }

    location @bolt {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://localhost:<%=(config.development?config.devPort:config.port);%>;
    }
}
